{
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "prettier.requireConfig": true,
  "editor.tabSize": 2,
  "eslint.enable": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.ignorePaths": ["warmup-schema.graphql"],
  "cSpell.words": [
    "Darrer",
    "lcov"
  ],
  "nodejs-testing.extensions": [
    {
      "extensions": ["js"],
      "parameters": [],
    }
  ],
}
